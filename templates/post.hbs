<h3>{{name}}</h3>
<h5>by {{author}}</h5>

<img class="post-image" {{bind-attr src=image}}/>

{{#if isEditing}}

  <div class="form-group">
    <label for="name">Post Name</label>
    {{input id="name" value=name class="form-control"}}
  </div>
  <div class="form-group">
    <label for="author">By</label>
    {{input id="author" value=author class="form-control"}}
  </div>
  <div class="form-group">
    <label for="image">Image URL</label>
    {{input id="image" value=image class="form-control"}}
  </div>
  <div class="form-group">
    <label for="body">Body</label>
    {{textarea id="body" value=body class="form-control" rows=15}}
  </div>

  <button class="btn btn-success" {{action 'save'}}>Save</button>

{{else}}
<div class="col-md-12">
  <p>{{body}}</p>
</div>
{{/if}}

<div class="col-md-12">
  <br>
  <button class="btn btn-primary" {{action 'edit'}}>Edit</button>
  <button class="btn btn-danger" {{action 'delete'}}>Delete</button>

</div>
